<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17CED4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageView
            android:id="@+id/ImagemModelo"
            android:layout_width="148dp"
            android:layout_height="154dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/claire_app">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTituloImagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Claire"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/txtDescricaoRaca"
                android:textSize="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fila Brasileiro - 7 anos">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/SocialLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_favorite_border_"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="170dp">

                </ImageView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>